root = true

[*]
charset = utf-8
indent_size = 4
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
[*.{js,jsx,php,htm,html,sass,scss,css}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.svg]
trim_trailing_whitespace = false
